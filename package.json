{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^5.1.8",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-s build:*",
    "dev:webapp": "cd ./packages/webapp && pnpm run start",
    "dev:api": "cd ./packages/api && pnpm run start:debug",
    "build:webapp": "lerna run build",
    "build:api": "lerna run build",
    "bootstrap": "pnpm i && lerna bootstrap"
  }
}
